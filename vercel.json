{
  "headers": [
    {
      "source": "/_next/static/(.*)",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=31536000, immutable"
        }
      ]
    },
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "no-store"
        }
      ]
    }
  ],
  "rewrites": [
 
    { "source": "/about", "destination": "/index.html" },
    { "source": "/features", "destination": "/index.html" },
    { "source": "/benefits", "destination": "/index.html" },
    { "source": "/contact", "destination": "/index.html" },
    { "source": "/faq", "destination": "/index.html" },
    { "source": "/terms", "destination": "/index.html" },
    { "source": "/privacy", "destination": "/index.html" },
    
   
    { "source": "/login", "destination": "/index.html" },
    { "source": "/forgot-password", "destination": "/index.html" },
    { "source": "/reset-password", "destination": "/index.html" },
    { "source": "/verify-email", "destination": "/index.html" },
    { "source": "/verify-handler", "destination": "/index.html" },
    { "source": "/onboarding", "destination": "/index.html" },
    { "source": "/processing-registration", "destination": "/index.html" },
    
   
    { "source": "/dashboard(.*)", "destination": "/index.html" },
    { "source": "/pets(.*)", "destination": "/index.html" },
    { "source": "/reminders(.*)", "destination": "/index.html" },
    { "source": "/documents(.*)", "destination": "/index.html" },
    { "source": "/profile(.*)", "destination": "/index.html" },
    { "source": "/settings(.*)", "destination": "/index.html" },
    { "source": "/referrals(.*)", "destination": "/index.html" },
    

    { "source": "/admin", "destination": "/index.html" },
    { "source": "/admin/(.*)", "destination": "/index.html" },
    

    { "source": "/upload(.*)", "destination": "/index.html" },
    { "source": "/ios-upload(.*)", "destination": "/index.html" },
    { "source": "/health-check(.*)", "destination": "/index.html" },
    

    { "source": "/shared(.*)", "destination": "/index.html" },
    

    { "source": "/blog", "destination": "/index.html" },
    { "source": "/blog/(.*)", "destination": "/index.html" },
    

    { "source": "/api/send-document-email", "destination": "" }
  ],
  "trailingSlash": false,
  "redirects": [
 
    {
      "source": "/:path*",
      "has": [
        {
          "type": "host",
          "value": "www.mypetid.vercel.app"
        }
      ],
      "destination": "https://mypetid.vercel.app/:path*",
      "permanent": true
    },
   
    {
      "source": "/fr",
      "destination": "https://mypetid.vercel.app",
      "permanent": true
    },
    {
      "source": "/es",
      "destination": "https://mypetid.vercel.app",
      "permanent": true
    },
    {
      "source": "/de",
      "destination": "https://mypetid.vercel.app",
      "permanent": true
    },
    {
      "source": "/fr/:path*",
      "destination": "/:path*",
      "permanent": true
    },
    {
      "source": "/es/:path*",
      "destination": "/:path*",
      "permanent": true
    },
    {
      "source": "/de/:path*",
      "destination": "/:path*",
      "permanent": true
    },
 
    {
      "source": "/download",
      "destination": "/features",
      "permanent": true
    },
    {
      "source": "/login",
      "destination": "/",
      "permanent": true
    },
    {
      "source": "/register",
      "destination": "/onboarding",
      "permanent": true
    },
    {
      "source": "/search/:path*",
      "destination": "/",
      "permanent": true
    }
  ]
}
